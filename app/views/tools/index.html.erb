<h1>Listing tools</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Material</th>
    <th>Weight</th>
    <th>Bought on</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tools.each do |tool| %>
  <tr>
    <td><%= tool.name %></td>
    <td><%= tool.material %></td>
    <td><%= tool.weight %></td>
    <td><%= tool.bought_on %></td>
    <td><%= link_to 'Show', tool %></td>
    <td><%= link_to 'Edit', edit_tool_path(tool) %></td>
    <td><%= link_to 'Destroy', tool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

